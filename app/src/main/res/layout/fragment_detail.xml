<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.babakchehraz.popmovies.DetailFragment"
    tools:showIn="@layout/activity_detail"
    android:background="@color/appBackground"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/detail_layout_top_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/detail_layout_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_title"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/movie_title_size"
            android:textColor="@color/text_color"
            android:paddingBottom="@dimen/detail_title_padding"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_poster"
            android:layout_below="@+id/detail_title"
            android:padding="@dimen/detail_item_padding"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_release_date_heading"
            android:layout_below="@+id/detail_title"
            android:layout_toRightOf="@id/detail_poster"
            android:layout_toEndOf="@+id/detail_poster"
            android:layout_marginTop="@dimen/detail_rating_top_margin"
            android:textColor="@color/text_color"
            android:gravity="center_horizontal"
            android:textSize="@dimen/detail_heading_size"
            android:text="@string/release_date_heading"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_release_date"
            android:layout_below="@+id/detail_release_date_heading"
            android:layout_toRightOf="@id/detail_poster"
            android:layout_toEndOf="@+id/detail_poster"
            android:textColor="@color/text_color"
            android:gravity="center_horizontal"
            android:textSize="@dimen/detail_release_date_size"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_rating_heading"
            android:layout_toEndOf="@id/detail_poster"
            android:layout_toRightOf="@id/detail_poster"
            android:layout_below="@+id/detail_release_date"
            android:text="@string/detail_rating_heading"
            android:textColor="@color/text_color"
            android:gravity="center_horizontal"
            android:textSize="@dimen/detail_heading_size"
            android:background="@color/detail_rating_top"
            android:layout_marginTop="@dimen/detail_rating_top_margin"
            android:layout_marginLeft="@dimen/detail_rating_margin"
            android:layout_marginRight="@dimen/detail_rating_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_rating"
            android:layout_below="@+id/detail_rating_heading"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color"
            android:layout_toRightOf="@+id/detail_poster"
            android:layout_toEndOf="@+id/detail_poster"
            android:gravity="center_horizontal"
            android:textSize="@dimen/detail_rating_size"
            android:background="@color/detail_rating_bottom"
            android:layout_marginLeft="@dimen/detail_rating_margin"
            android:layout_marginRight="@dimen/detail_rating_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_overview_heading"
            android:layout_below="@+id/detail_poster"
            android:text="@string/detail_overview_heading"
            android:textColor="@color/text_color"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/detail_heading_padding"
            android:paddingBottom="@dimen/detail_heading_padding"
            android:textSize="@dimen/detail_heading_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_overview"
            android:textColor="@color/text_color"
            android:layout_below="@+id/detail_overview_heading"
            android:padding="@dimen/detail_item_padding"
            android:lineSpacingExtra="@dimen/detail_line_spacing"/>
    </RelativeLayout>
</ScrollView>
